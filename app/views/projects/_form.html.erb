<%= simple_form_for(@project, :html => {:class => 'form-inline well', :multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :short_description %>
    <%= f.input :description %>
    <%= f.input :visibility, collection: ['public', 'private', 'secret'], :input_html => {:class => "span2"}  %>
    <%= f.input :status, collection: ['open', 'completed', 'paused', 'droped'], :input_html => {:class => "span2"} %>
    
  <div class="span3">
	  <div class="fileupload fileupload-new" data-provides="fileupload" style="margin-top: 5px;">
	    <div class="fileupload-preview thumbnail " style="width: 100%; height: 100%; min-height: 272px; background-color: white"><%=  image_tag @project.cover.thumb.to_s if @project.cover? %></div>
		<div style="margin-bottom: 7px">
	      <span class="btn btn-mini btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><%= f.file_field :cover %></span>
	      <a href="#" class="btn fileupload-exists btn-mini" data-dismiss="fileupload">Remove</a>
	    </div>
	    
	   
	  </div>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
