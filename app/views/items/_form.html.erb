<%= simple_form_for(@item, :html => {:class => 'form-inline well' }) do |f| %>
  <%= f.error_notification %>

  <fieldset>
	<legend><%= @form_title %></legend>
  <div class="form-inputs">
	  <div class="row">
		  <div class="span8">
			<div class="row">
		  	   <div class="span6">
				   <%= f.input :name, :input_html => { :class => "span6"} %>
			   </div>
			   <div class="span2">
			   <%= f.input :category, collection: ['Material', 'Equipment', 'Product'], :input_html => {:class => "span2"}  %>
		   </div>
			   
			  <div class="span8">
    			   <%= f.input :short_description, :input_html => { :class => "span8"} %>
    			   <%= f.input :description, :input_html => { :rows => "15", :class => "span8"} %>
    			   
			   </div>
			 </div>
		 </div>
	   <div class="span2">
	   <%= f.input :human_price, :input_html => { :class => "span2"} %>
   </div>
   <div class="span1">
	   <%= f.input :currency, collection: ['Real', 'Dollar'], :input_html => { :class => "span1"}  %>
	   </div>
	   <div class="span3">
	 	  <div class="control-group string required">
	 		  <label class="string optional control-label" for="Tags">Tags</label>
	 		  <div class="controls">
	 		    <input class="tagManager span1" data-provide="typehead" data-items=4 type="text">
	 	  	  </div>
	 	  </div>
	  </div>
			 <div class="span3">
				 <label class="select optional control-label" for="item_category">Image</label>
			   <div class="fileupload fileupload-new" data-provides="fileupload" style="margin-top: 5px;">
			      <div class="fileupload-preview thumbnail " style="width: 100%; height: 100%; min-height: 272px; background-color: white"><%=  image_tag @item.cover.cover.to_s if @item.cover? %></div>
			   	  <div style="margin-bottom: 7px">
			         <span class="btn btn-mini btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><%= f.file_field :cover %></span>
			         <a href="#" class="btn fileupload-exists btn-mini" data-dismiss="fileupload">Remove</a>
			      </div>
			   </div>
		   </div>
			
		     
		
	</div>
	
    			  
  </div>
  
	  
  

  
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
	<% if @item.new_record? == false %>
		<%= link_to 'Show', @item, :class => "btn" %>
	<% end %>
	<%= link_to 'Back', items_path, :class => "btn" %>
	
  </div>
<% end %>
