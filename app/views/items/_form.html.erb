<%= simple_form_for(@item, :html => {:class => 'form-inline well' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :short_description %>
    <%= f.input :description %>
    <%= f.input :human_price %>
    <%= f.input :currency, collection: ['Real', 'Dollar']  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
