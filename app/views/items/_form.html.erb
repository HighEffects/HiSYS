<%= simple_form_for(@item, :html => {:class => 'form-inline well' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :short_description %>
    <%= f.input :description %>
    <%= f.input :human_price %>
    <%= f.input :currency, collection: ['Real', 'Dollar']  %>
	<%= f.input :category, collection: ['Material', 'Equipment', 'Product']  %>
  </div>
  
	  <div class="control-group string required">
		  <label class="string optional control-label" for="Tags">Tags</label>
		  <div class="controls">
		    <input class="tagManager span2" data-provide="typehead" data-items=4 type="text">
	  	  </div>
	  </div>
  
  <div class="fileupload fileupload-new" data-provides="fileupload" style="margin-top: 5px;">
    <div class="fileupload-preview thumbnail " style="width: 100%; height: 100%; min-height: 272px; background-color: white"><%=  image_tag @item.cover.cover.to_s if @item.cover? %></div>
	<div style="margin-bottom: 7px">
      <span class="btn btn-mini btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><%= f.file_field :cover %></span>
      <a href="#" class="btn fileupload-exists btn-mini" data-dismiss="fileupload">Remove</a>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
