<%= simple_form_for(@slide) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :upload %>
    <%= f.input :link_title %>
    <%= f.input :link %>
    <%= f.input :layout, collection: ['top-left'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
