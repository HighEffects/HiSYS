<%= simple_form_for(@upload, :html => {:multipart => true})  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :file_type %>
    <%= f.input :legend %>
    <%= f.file_field :file %>
    <%= f.input :visibility %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
