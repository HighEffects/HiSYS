<h1>Listing uploads</h1>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Legend</th>
    <th>User</th>
	<th><i class="icon-comment"></i></th>
    <% if user_signed_in? %>
	  <th style="width: 90px;"><%= t "sys.actions" %></th>
	<% end %>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= link_to(upload.name, upload_path(upload.id)) %></td>
    <td><%= truncate(upload.legend, :length => 100, :omission => '...') %></td>
    <td><%= upload.user.first_name %> <%= upload.user.last_name %></td>
    <td><%= upload.comments.count %></td>
    <td style="text-align: right;">
	  <div class="btn-group">
  	    <%= link_to 'Edit', edit_upload_path(upload), :class => "btn btn-mini" %> 
	    <%= link_to 'Delete', upload, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %>
	 </div>
	</td>
	
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Upload', new_upload_path, :class => "btn" %>
