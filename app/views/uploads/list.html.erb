<h1>Listing uploads</h1>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>File type</th>
    <th>Legend</th>
    <th>File</th>
    <th>User</th>
    <th>Visibility</th>
    <th>Actions</th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= upload.name %></td>
    <td><%= upload.file_type %></td>
    <td><%= truncate(upload.legend, :length => 110, :omission => '...') %></td>
    <td><%= truncate(upload.file.to_s, :length => 30, :omission => '...') %></td>
    <td><%= upload.user.email %></td>
    <td><%= upload.visibility %></td>
    <td style="text-align: right;">
  	  <%= link_to 'Edit', edit_upload_path(upload), :class => "btn btn-mini" %> 
	  <%= link_to 'Delete', upload, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %>
    </td>
	
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Upload', new_upload_path, :class => "btn" %>
