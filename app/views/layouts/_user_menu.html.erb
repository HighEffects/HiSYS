<% if user_signed_in? %>
  <li class="dropdown">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name + " " + current_user.last_name %> <b class="caret"></b></a>
	  <ul class="dropdown-menu">
		  <%  if current_user.admin == true %>
		  	<li><%= link_to 'Admin Dashboard', admin_path %></li>
		  <% end %>
		  <li><%= link_to 'Lista de compras', shopping_carts_path %></li>
		  <% if current_user.shopping_carts %>
		  	  <% show_history = false %>
			  <% current_user.shopping_carts.each do |cart| %>
				  <% if cart.status != 'open' %>
				  	<% show_history = true %>
				  <% end %>
			  <% end %>
			  <% if show_history == true %>
			  	<li><%= link_to 'Historico de compras', historico_de_compras_path %></li>
			  <% end %>
		  <% end %>
		  <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
 		  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
	  </ul>
  </li>
				
<% else %>
  <li><%= link_to t("sys.signup"), new_user_registration_path %></li>
  <li><%= link_to t("sys.login"), new_user_session_path %></li>
<% end %>