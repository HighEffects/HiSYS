<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Hisys" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'images/favicon.ico', :rel => 'shortcut icon' %>
	
	<%= render 'layouts/analytics' %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= render 'layouts/logo' %>
          <div class="row-fluid nav-collapse">
            <%= render 'layouts/nav_links' %>
			<ul class="nav pull-right">
				
				<%= render 'layouts/search' %>

				<li class="divider-vertical"></li>
				
				<%= render 'layouts/user_menu' %>

			</ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
		  <div class="span2" >
			<ul class="nav nav-list well affix span2" data-spy="affix" >
			  <li class="nav-header">Adminstração</li>
			  
			  <% if params[:action] == "index" %>
			  	<li class="active"><a href="<%= admin_path %>"><i class="icon-home icon-white"></i> Dashboard</a></li>
			  <% else %>
			    <li><a href="<%= admin_path %>"><i class="icon-home icon-white" style="color: black"></i> Dashboard</a></li>
			  <% end %>
			  
			  <% if params[:action] == "slides" %>
			  	<li class="active"><a href="<%= admin_slides_path %>"><i class="icon-picture icon-white"></i> Slides</a></li>
			  <% else %>
			  	<li><a href="<%= admin_slides_path %>"><i class="icon-picture" style="color: black"></i> Slides</a></li>
			  <% end %>
			  
			  <% if params[:action] == "support_messages_list" %>
			  	<li class="active"><a href="<%= admin_support_messages_path %>"><i class="icon-envelope icon-white"></i> Mensagens</a></li>
			  <% else %>
			  	<li><a href="<%= admin_support_messages_path %>"><i class="icon-envelope" style="color: black"></i> Mensagens</a></li>
			  <% end %>
			  
			  <% if params[:action] == "user_list" %>
			  	<li class="active"><a href="<%= admin_user_list_path %>"><i class="icon-user icon-white"></i> Usuários</a></li>
			  <% else %>
			  	<li><a href="<%= admin_user_list_path %>"><i class="icon-user" style="color: black"></i> Usuários</a></li>
			  <% end %>
			  
			  <% if params[:action] == "locations_list" %>
			  	<li class="active"><a href="<%= admin_locations_list_path %>"><i class="icon-map-marker icon-white"></i> Locações</a></li>
			  <% else %>
			  	<li><a href="<%= admin_locations_list_path %>"><i class="icon-map-marker" style="color: black"></i> Locações</a></li>
			  <% end %>
			  
			  <li class="nav-header">Conteúdo</li>
			  
			  <% if params[:action] == "page_list" %>
			  	<li class="active"><a href="<%= admin_page_list_path %>"><i class="icon-file icon-white"></i> Páginas</a></li>
			  <% else %>
			  	<li><a href="<%= admin_page_list_path %>"><i class="icon-file" style="color: black"></i> Páginas</a></li>
			  <% end %>
			  
			  <% if params[:action] == "post_list" %>
			  	<li class="active"><a href="<%= admin_post_list_path %>"><i class="icon-file icon-white"></i> Posts</a></li>
			  <% else %>
			  	<li><a href="<%= admin_post_list_path %>"><i class="icon-file" style="color: black"></i> Posts</a></li>
			  <% end %>
			  
			  <% if params[:action] == "upload_list" %>
			  	<li class="active"><a href="<%= admin_upload_list_path %>"><i class="icon-picture icon-white"></i> Arquivos</a></li>
			  <% else %>
			  	<li><a href="<%= admin_upload_list_path %>"><i class="icon-picture" style="color: black"></i> Arquivos</a></li>
			  <% end %>
			  
			  <% if params[:action] == "items_list" %>
			  	<li class="active"><a href="<%= admin_items_list_path %>"><i class="icon-gift icon-white"></i> Itens</a></li>
			  <% else %>
			  	<li><a href="<%= admin_items_list_path %>"><i class="icon-gift" style="color: black"></i> Itens</a></li>
			  <% end %>
			  
			  <% if params[:action] == "assets_list" %>
			  	<li class="active"><a href="<%= admin_assets_list_path %>"><i class="icon-gift icon-white"></i> Assets</a></li>
			  <% else %>
			  	<li><a href="<%= admin_assets_list_path %>"><i class="icon-gift" style="color: black"></i> Assets</a></li>
			  <% end %>
			  
			  <% if params[:action] == "comment_list" %>
			  	<li class="active"><a href="<%= admin_comment_list_path %>"><i class="icon-comment icon-white"></i> Comentários</a></li>
			  <% else %>
			  	<li><a href="<%= admin_comment_list_path %>"><i class="icon-comment" style="color: black"></i> Comentários</a></li>
			  <% end %>
			</ul>
		  </div>
          <div class="span10" style="min-height: 400px;">
			  <% if notice && params[:controller] != "users" %>
				  <div class="alert">
				    <button type="button" class="close" data-dismiss="alert">×</button>
				    <strong>Notice! </strong><%= notice %>
				  </div>
			 <% end %>
			 <% if alert && params[:controller] != "users"%>
			  <div class="alert">
			    <button type="button" class="close" data-dismiss="alert">×</button>
			    <strong>Alert! </strong><%= alert %>
			  </div>
			  <% end %>
             <%= yield %>
          </div>
          
        </div><!--/row-->


      <footer>
		  <hr>
        <p>&copy; High Effects <%= Time.now.strftime("%Y") %></p>
      </footer>

    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
