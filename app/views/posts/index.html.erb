<h1>Blog</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Content</th>
	<th>Author</th>
	<th>Comments</th>
    <% if user_signed_in? %>
	  <th></th>
	<% end%>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td><%= truncate( post.content, :length => 110, :omission => '...') %></td>
	<td><%= post.user.email %></td>
	<td><%= post.comments.count %></td>
	<% if user_signed_in? %>
      <td style="text-align: right;">
	  	<%= link_to 'Edit', edit_post_path(post), :class => "btn btn-mini" %> 
		<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %>
	  </td>
    </tr>
    <% end %>
  </tr>
<% end %>
</table>
