<%= markdown(@page.content)  %>

<% counter = 0 %>
<% @members.each do |count| %>
	<% counter = counter + 1 %>
<% end%>

<script src="jquery.nested.js"></script>
<script src="makeboxes.js"></script>

<hr>
<div style="text-align: center; margin-right: 50px">
<h3>Equipe</h3>
<p style="margin-top: -15px;">Membros do HE Lab</p>
</div>

<div style="margin-left: auto; margin-right: auto; width: <%= counter * 280 + 50 %>px;">
	<div style="margin-left: 50px">
		<% @members.each do |member| %>

			<div style="width: 180px; margin-right: 100px; float: left">
			   <%= image_tag member.user.avatar.to_s, :style => "width: 180px; height:180px; border-radius: 500px;" if member.user.avatar? %>
			   <h4 style="text-align: center;"><%= member.user.first_name %> <%= member.user.last_name %></h4>
			   <p style="text-align: center; margin-top: -10px;"><%= member.position %></p>
		    </div>

		<% end %>
	</div>
</div>