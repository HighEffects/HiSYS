<%= simple_form_for(@page, :html => {:class => 'form-inline well' }) do |f| %>
  <fieldset>
	<legend>Editar p√°gina</legend>
  <%= f.error_notification %>
  <div class="control-group string optional">
	  Name: <%= f.input :name,  wrapper: 'inline', label: false %> 
	  Slug: <%= f.input :slug, wrapper: 'inline', label: false %>
	  Parent: <%= f.input :parent_id, collection: Page.order(:name), include_blank: true, wrapper: 'inline', label: false %>
  </div>
  <%= f.input :content, as: :text,:label => false, :input_html => {:rows => '18', :style => 'width: 98.8%' } %>
  <input class="tagManager" data-provide="typehead" data-items=4>
  <%= f.error :base %>
  <div class="form-actions">
	  <%= f.button :submit, :class => 'btn-success' %>
  	  <%= link_to 'Back', pages_path, :class => 'btn' %>
</div>
  </fieldset>
<% end %>