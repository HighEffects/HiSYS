<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Completed</th>
    <th>User</th>
    <th>Task list</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.completed %></td>
    <td><%= task.user %></td>
    <td><%= task.task_list %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

