<div class="span3 offset4 well">
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <legend>Login</legend>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :input_html => { :class => "span3"} %>
    <%= f.input :password, :required => false, :input_html => { :class => "span3"} %>
    <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => "Remember me" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
